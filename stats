statsFile=$1
testOutputFolder="/home/ohadoz/Desktop/RansomwareDetection/TestData/output/"

echo "Getting statistics for all files in $testOutputFolder" >> $statsFile

for subDirectory in $(find $testOutputFolder -type d); do 
    if [ ! "$(ls -A $subDirectory)" ]; then
        echo "$subDirectory is Empty"
    fi
    
    echo "Directory: $subDirectory" >> $statsFile
    for file in $(find $subDirectory -maxdepth 1 -type f); do 
        echo "A"
    done
done

echo "Finished" >> $statsFile